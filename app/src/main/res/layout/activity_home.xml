<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Activity.HomeActivity">

    <LinearLayout
        android:id="@+id/lymenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        app:srcCompat="@mipmap/home"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/btnAsignaturas"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        app:srcCompat="@mipmap/asignaturas"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/btnFavoritos"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        app:srcCompat="@mipmap/favoritos"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/btnTransmision"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        app:srcCompat="@mipmap/transmision"
        android:onClick="onClick"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedorFragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above = "@+id/lymenu"
        android:layout_alignParentTop = "true">

    </FrameLayout>

</RelativeLayout>